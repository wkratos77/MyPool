#include <unistd.h>

char	*ft_strcapitalize(char *str)
{
	int	i;

	i = 0;
	while (str[i])
	{
		if ((str[i] >= ' ' && str[i] <= '/') || (str[i] >= ':' && str[i] <= '@') || (str[i] >= '[' && str[i] <= '`'))
		{
			if (str[i + 1] >= 'a' && str[i + 1] <= 'z')
			{
				str[i + 1] = str[i + 1] - 32;
				write (1, &str[i +1], 1);
			}
		}
		else write (1, &str[i], 1);
	i++;
	}
}
int main()
{
	char str[]="hi, how are you? 42words forty-two; fifty+and+one";
	char *s = ft_strcapitalize(str);
}
